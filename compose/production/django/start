#exec /usr/local/bin/gunicorn config.asgi --bind 0.0.0.0:7000 --chdir=/app -k uvicorn.workers.UvicornWorker
exec uvicorn config.asgi:application --host 0.0.0.0:7000 --reload --reload-include '*.html'
